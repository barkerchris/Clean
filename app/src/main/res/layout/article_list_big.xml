<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_big"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_preview_big"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/txt_category_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_category_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/Overline"
        app:layout_constraintBottom_toTopOf="@+id/txt_title_big"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="UK/CORONAVIRUS" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_time_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/Overline"
        app:layout_constraintBottom_toBottomOf="@+id/txt_category_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_category_big"
        tools:text="1 hour ago" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/Headline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Wales enters national lockdown" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_source_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Subtitle1"
        android:textColor="@color/textOverlay"
        app:layout_constraintBottom_toBottomOf="@+id/img_preview_big"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Guardian" />

</androidx.constraintlayout.widget.ConstraintLayout>