<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_small"
    android:orientation="vertical"
    android:paddingVertical="@dimen/padding_small">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_category_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/Overline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_preview_small"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="UK/CORONAVIRUS" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/Headline6"
        app:layout_constraintBottom_toTopOf="@+id/txt_source_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_preview_small"
        app:layout_constraintTop_toBottomOf="@+id/txt_category_small"
        tools:text="Wales enters national lockdown" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_source_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/Subtitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_preview_small"
        tools:text="Guardian" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_preview_small"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_action_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>